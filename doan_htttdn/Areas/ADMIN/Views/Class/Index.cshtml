@using PagedList.Mvc;
@model PagedList.IPagedList<doan_htttdn.FF.CLASS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}

<div class="content_table">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> QUẢN LÝ GIÁO VIÊN </h3>
                    @using (Html.BeginForm("Index", "Class", FormMethod.Get))
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="col-md-4">
                                    <input style="color:gray" type="text" name="Search" value="Nhập từ khóa cần tìm" />
                                </div>
                                <div class="col-md-4">
                                    <input style="color:black" type="submit" value="Tìm" />
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div>
                    <a href="@Url.Action("Them", "Class")"> <button> Thêm Lớp </button> </a>
                </div>
                <div class="panel-body">


                    <table border="1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Giáo Viên</th>
                                <th>Số Điện Thoại</th>
                                <th>Địa Chỉ</th>
                                <th>Email</th>
                                <th>Trình Độ</th>
                                <th colspan="2"></th>
                            </tr>
                        </thead>
                        @Html.Raw(TempData["msg"])
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr id="row_@item.IDTeacher">
                                    <td>@item.IDTeacher</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.ADDRESS</td>
                                    <td>@item.Email</td>
                                    <td>@item.Knowledge</td>
                                    <td> <a href="@Url.Action("sua", "GiaoVien", new { @id = item.IDTeacher})"> Sửa </a></td>
                                    <td>
                                        @Ajax.ActionLink("Xóa", "Delete","GiaoVien",new { @id = item.IDTeacher }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có Chắc Xóa ?",
                                       OnComplete = "$('#row _"+@item.IDTeacher+"').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            </tbody>

                        }

                    </table>
                    @Html.PagedListPager(Model, Page => Url.Action("GiaoVien", new { Page, Search = ViewBag.Search }))
                </div>
            </div>
        </div>
    </div>

</div>
