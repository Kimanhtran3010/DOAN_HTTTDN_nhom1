@model doan_htttdn.FF.TEACHER

@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}


@using (Html.BeginForm("Sua", "GiaoVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa Giáo Viên</h4>
        <hr />
