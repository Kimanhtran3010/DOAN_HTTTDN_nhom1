@using doan_htttdn.FF;
@model List<TEACHER>
@{
    ViewBag.Title = "GiaoVien";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutADD.cshtml";
}

<div class="content_table">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> QUẢN LÝ GIÁO VIÊN </h3>
                </div>
                <div style="float:right">
                    <a href="@Url.Action("Them","GiaoVien")"> <button> Thêm Giáo Viên</button> </a>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("GiaoVien","GiaoVien", FormMethod.Get))
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-md-4">
                                    <input type="text" name="Search" />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" Tìm Kiếm />
                                </div>
                            </div>
                        </div>
                    }
                    <table border="1">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Giáo Viên</th>
                                <th>Số Điện Thoại</th>
                                <th>Địa Chỉ</th>
                                <th>Email</th>
                                <th>Trình Độ</th>
                                <th colspan="2"></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr id="row_@item.IDTeacher">
                                    <td>@item.IDTeacher</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.ADDRESS</td>
                                    <td>@item.Email</td>
                                    <td>@item.Knowledge</td>
                                    <td> <a href="@Url.Action("sua", "GiaoVien", new { @id = item.IDTeacher})"> Sửa </a></td>
                                    <td>
                                        @Ajax.ActionLink("Xóa", "Delete",new { @id = item.IDTeacher }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có Chắc Xóa ?",
                                       OnComplete = "$('#row _"+@item.IDTeacher+"').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            </tbody>

                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
   
</div>