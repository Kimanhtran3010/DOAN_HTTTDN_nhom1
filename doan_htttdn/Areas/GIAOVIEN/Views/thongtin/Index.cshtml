@model doan_htttdn.FF.TEACHER
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/GIAOVIEN/Views/Shared/_Layout.cshtml";
}
<h4 align="left" style="color:blue; padding-top:30px" ><b>
    <a href="@Url.Action("Index","Login")">Giáo viên</a>/
    <a href="@Url.Action("Index","thongtin")">Thông tin giáo viên</a>
    
</b></h4><br />
<div class="row" style="        border: double;
        width: 80%;
        height:500px;
        margin-left: 150px;
">
    @using (Html.BeginForm("Update", "thongtin", FormMethod.Post, new { @class = "col-md-8", @style = "padding-top:30px", @onsubmit = "return matchin4()" }))
    {
        //<div class="col-md-8" style="padding-top:30px">

        <table align="center">
            <tr style="height: 70px">
                <td style="width:25%;"><b>Mã giáo viên:</b></td>
                
                <td >@Html.TextBoxFor(Model => Model.IDTeacher, new {  @class = "dtoid", @type = "Text", @autofocus = "autofocus", @id = "id", @placeholder = "Nhập max giáo viên", @size = "50px", @required = "" , @readonly = "readonly" })</td>
                
            </tr>
            <tr style="height: 70px">
                <td style="width:25%"><b>Họ và tên:</b></td>
                <td>@Html.TextBoxFor(Model => Model.Name, new { @class = "dto", @type = "Text", @autofocus = "autofocus", @id = "namegv", @placeholder = "Nhập tên giáo viên", @size = "50px", @required = "" })</td>
                
            </tr>
            <tr style=" height:70px">
                <td  style="width:25%"><b>Email:</b></td>
                <td> @Html.TextBoxFor(Model => Model.Email, new {  @class = "dto", @type = "Text", @autofocus = "autofocus", @id = "email", @placeholder = "Nhập mail", @size = "50px", @required = "" })</td>

            </tr>
            <tr style="height: 70px">
                <td style="width:25%;"><b>Số điện thoại:</b></td>
               
                <td> @Html.TextBoxFor(Model => Model.Phone, new { @class = "dto", @type = "Text", @autofocus = "autofocus", @id = "phonegv", @placeholder = "Nhập mail", @size = "50px", @required = "" })</td>
            </tr>
            <tr style="height: 70px">
                <td style="width:25%;"><b>Trình độ:</b></td>
               
                <td> @Html.TextBoxFor(Model => Model.Knowledge, new { @class = "dto", @type = "Text", @autofocus = "autofocus", @id = "tdgv", @placeholder = "Nhập mail", @size = "50px", @required = "" })</td>
            </tr>
         
        </table>
            <b> <input type="submit" name="btchange" value="Lưu" style="margin-left:60%;"/> &nbsp;</b>
    }
    <div>

</div>

    
<div class="col-md-4" style="padding-top:30px">
   <div style="        width: 170px;
        border: inset;
        height: 170px;
        border-radius: 50%;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        background-image: url('../../../../Assets/Image/p1.jpg');">
       
       <div style="padding-left:10%;padding-bottom:50%; align-content:center;">
          
           <span style="text-align:center"> </span>
       </div>
       <div style="margin-top: 130px;
    margin-left: 50px;">
           <b>Ảnh đại diện:</b>
           <input type="file" name="file" value="" style="margin-bottom:10px;    padding-top: 15px;" />
       </div>
   </div>
</div>
</div>

                                            