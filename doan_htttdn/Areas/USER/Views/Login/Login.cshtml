@model doan_htttdn.Areas.USER.Models.Admin_Article
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/USER/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="container">
    <div class="account">
        <h1>Account</h1>
        <div class="account-pass">
            <div class="col-md-8 account-top">
                <form>

                    <div>
                        <span>Email</span>
                        @*<input type="text">*@
                        @Html.TextBoxFor(x => x.ID_Admin)
                        @Html.ValidationMessageFor(x => x.ID_Admin) 
                    </div>
                    <div>
                        <span>Password</span>
                        @*<input type="password">*@ 
                        @Html.TextBoxFor(x => x.Pass, new { @type = "password",})
                        @Html.ValidationMessageFor(x => x.Pass)
                    </div>
                    <input type="submit" value="Login">
                    @ViewBag.err
                </form>
            </div>
            <div class="col-md-4 left-account ">
                <a href="single.html"><img class="img-responsive " src="images/s1.jpg" alt=""></a>
                <div class="five">
                    <h2>25% </h2><span>discount</span>
                </div>
                <a href="register.html" class="create">Create an account</a>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

</div>
}
