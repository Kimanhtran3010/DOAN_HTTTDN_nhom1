@model List<doan_htttdn.FF.ARTICLE>
@{
    Layout = null;
}

<body>
    @{ int i = 0;

        <div class="grid-in">
            @foreach (var item in Model)
            {
                
                if (i < 4 )
                            {
                    <div class="col-md-3 grid-top" style="margin-top:50px">
                        <a href="/User/TinTuc/Detail/@item.ID_Article+1" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="~/Assets/Image/IMGAR/@item.Image" alt="" style="height:300px">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left    b-delay03 ">
                                    <span>@item.Menu_Article.Name_Menu</span>
                                </h3>
                            </div>
                        </a>


                        <p><a href="/User/TinTuc/Detail/@item.ID_Article">@item.Title</a></p>
                    </div>
                }
                else { break; }
            i++;
            }


        </div>
    }


</body>
