                        <li><a href="#">design</a></li>
                        <li><a href="#">fashion</a></li>
                        <li><a href="#">lorem</a></li>
                        <li><a href="#">dress</a></li>


                    </ul>
                    
                </div>

            </div>
            <!---->
            
            
        </div>
        <div class="col-md-9 product1">

            <div class=" bottom-product">
                @foreach (var items in Model)
                {
                    <div class="col-md-4 bottom-cd simpleCart_shelfItem" >
                        <div class="product-at ">
                            <a href="chi-tiet-san-pham?id=@items.IDRobot">
                                <img class="img-responsive" src="@Url.Content(items.Image)" style="height:230px ; width:220px" alt="">

                                <div class="pro-grid">
                                    <span class="buy-in">Buy Now</span>
                                </div>
                            </a>
                        </div>
                        <p class="tun">@Html.DisplayFor(model => items.Name) </p>
                        <a href="#" class="item_add"><p class="number item_price"><i> </i>@items.Price</p></a>
                    </div>
                }
                <div class="clearfix"> </div>
            </div>



        </div>
        <div class="clearfix"> </div>
        <nav class="in">
            <ul class="pagination">
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
            </ul>
        </nav>
    </div>

</div>

